{
  "name": "aromapulse",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=aromapulse-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build && cp -r public/* dist/ && echo '{\"version\":1,\"include\":[\"/*\"],\"exclude\":[\"/_worker.js\",\"/_headers\"]}' > dist/_routes.json",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name aromapulse",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply aromapulse-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply aromapulse-production",
    "db:seed": "wrangler d1 execute aromapulse-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute aromapulse-production --local",
    "db:console:prod": "wrangler d1 execute aromapulse-production",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "hono": "^4.10.5",
    "node-html-parser": "^7.0.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
